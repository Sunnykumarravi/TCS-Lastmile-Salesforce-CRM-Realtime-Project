<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Sends_an_email_to_the_customer_upon_order_confirmation</fullName>
        <description>Sends an email to the customer upon order confirmation.</description>
        <protected>false</protected>
        <recipients>
            <type>campaignMemberDerivedOwner</type>
        </recipients>
        <recipients>
            <recipient>Adnib</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>Customer</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>Distributor</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>cattlefarmer@gmail.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Order_Confirmation_Email_Template</template>
    </alerts>
    <fieldUpdates>
        <fullName>Approve_Large_Order</fullName>
        <field>Order_Status__c</field>
        <literalValue>Pending Approval</literalValue>
        <name>Approve Large Order</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Large Order Approval</fullName>
        <active>true</active>
        <description>Trigger approval process for big orders.</description>
        <formula>Quantity__c &gt;500</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
